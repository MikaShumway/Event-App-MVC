@model IEnumerable<EventApplication.Models.Event>


<div class="panel-heading">Search For Events</div>

<div class="panel-body">
    @using (Html.BeginForm("Index", "Event", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        @Html.TextBox("TitleOrType", null, new { placeholder = "Search by Title or Type" })
        @Html.TextBox("Location", null, new { placeholder = "Search by Location" })

        <button type="submit" class="btn btn-default">Search</button>
    }
</div>